@model IEnumerable<MovieViewModel>

@{
    ViewData["Title"] = "Index";
}

<div class="row">
    <div class="col-md-5">
        <div class="col text-end">
            <a asp-controller="Movies" asp-action="Create" class="btn btn-warning">Create new Movie</a>

        </div>
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Movie Name</th>
                    
                    <th>Genre Name</th>
                    <th>Action</th>
                   
                </tr>
            </thead>
            <tbody>
                @foreach(var item in Model)
                {
                    <tr>
                        <td>@item.MovieName</td>
                       
                        <td>@item.GenreName</td>
                        <td>
                            <a asp-controller="Movies" asp-action="Details" asp-route-id="@item.Id">Details</a>
                            <a asp-controller="Movies" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                            <a asp-controller="Movies" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                       
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
