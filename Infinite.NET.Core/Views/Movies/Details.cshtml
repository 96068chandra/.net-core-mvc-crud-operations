@model MovieViewModel
@{
    ViewData["Title"] = "Details";
}

<h1> Movie Details</h1>

<div class="row">
    <div class="col-md-7">
        <div class="row">
            <div class="co">
                <h2>List of Movies</h2>
            </div>
            <div class="col text-end">
                <a asp-controller="Movies" asp-action="Create" class="btn btn-warning">Create new Movie</a>

            </div>
        </div>
        <ul class="list-group">
            <li class="list-group-item"><b>Movie Name</b>@Model.MovieName</li>
            <li class="list-group-item"><b>Production Name</b>@Model.ProductionName</li>
            <li class="list-group-item"><b>Genre Name</b>@Model.GenreName</li>
            <li class="list-group-item"><b>Release Date</b>@Model.ReleaseDate.ToShortDateString()</li>

        </ul>
        <a asp-controller="Movies" asp-action="Index"Back to List></a>
    </div>
</div>

